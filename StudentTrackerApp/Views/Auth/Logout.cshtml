@{
    ViewData["Title"] = "Logout";
}

<form method="post" asp-action="PerformLogout" asp-controller="Auth">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-md-5 col-lg-4">
            <div class="portal-card">
                <h2 class="fw-bold mb-4 text-center">Logout</h2>
                <p class="text-center mb-4">Are you sure you want to logout?</p>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary me-3">Yes, Logout</button>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </div>
    </div>  
</form>