@model RegisterModel

@{
    string userRole = Model.RoleName ?? "User";

    ViewData["Title"] = ViewData["Title"] ?? $"{userRole} Registration";

    var iconClass = userRole.ToLower() switch
    {
        "student" => "bi-person-circle student-icon",
        "teacher" => "bi-person-badge-fill teacher-icon",
        "admin" => "bi-shield-lock-fill admin-icon",
        _ => "bi-person-circle user-icon"
    };
    var iconName = iconClass.Split(' ')[0];
    var iconColorClass = iconClass.Split(' ')[1];
}

<div class="row justify-content-center align-items-center min-vh-100">
    <div class="col-md-5 col-lg-4">
        <div class="login-card">
            <div class="text-center mb-4">
                <div class="login-icon @iconColorClass">
                    <i class="bi @iconName"></i>
                </div>
                <h2 class="fw-bold">Register as @userRole</h2>
                <p class="text-muted">Create your @userRole.ToLower() account</p>
            </div>

            <form method="post" asp-action="Register" asp-controller="Auth" asp-route-roleName="@Model.RoleName">

                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="RoleName" />

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email / @userRole ID</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email or ID" required />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                        <input type="password" asp-for="Password" class="form-control" placeholder="Enter password"
                            required />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input type="password" asp-for="ConfirmPassword" class="form-control"
                            placeholder="Confirm password" required />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success w-100 login-btn mt-3">
                    <i class="bi bi-person-plus-fill me-2"></i>Register
                </button>

                <div class="text-center mt-3">
                    <a asp-action="@(userRole)Login" asp-controller="Auth"
                        class="text-muted text-decoration-none d-block mb-2">
                        Already registered? Go to Login
                    </a>
                    <a href="/" class="text-muted text-decoration-none">
                        <i class="bi bi-arrow-left me-1"></i>Back to Home
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        body {
            background: linear-gradient(135deg, #66ea94 0%, #4ba29b 100%);
            min-height: 100vh;
        }

        .login-card {
            background: white;
            border-radius: 20px;
            padding: 2.5rem;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
        }

        .login-icon {
            font-size: 4rem;
            margin-bottom: 1rem;
        }

        .student-icon {
            color: #4a90e2;
        }

        .teacher-icon {
            color: #e74c3c;
        }

        .admin-icon {
            color: #800000;
        }

        .input-group-text {
            background-color: #f8f9fa;
            border-right: none;
        }

        .form-control:focus {
            border-color: #4a90e2;
            box-shadow: 0 0 0 0.2rem rgba(74, 144, 226, 0.25);
        }

        .login-btn,
        .btn-success {
            padding: 0.75rem;
            font-size: 1.1rem;
            border: none;
            transition: all 0.3s ease;
        }

        .btn-success {
            background-color: #28a745;
        }

        .login-btn:hover,
        .btn-success:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(40, 167, 69, 0.3);
        }

        a {
            color: #4a90e2;
        }

        a:hover {
            color: #357abd;
        }
    </style>
}

@section Scripts {
    @{
        // Enables client-side validation using unobtrusive JavaScript
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}