@{
    ViewData["Title"] = "Student Dashboard";
}

<div class="container py-5">
    <div class="row">
        <div class="col-12 text-center mb-5">
            <h1 class="display-4 text-white fw-bold mb-2">
                <i class="bi bi-person-circle me-3"></i>Student Dashboard
            </h1>
            <p class="lead text-white">Welcome back! What would you like to do today?</p>
        </div>
    </div>

    <div class="row g-4 justify-content-center">
        <!-- Clock In Card -->
        <div class="col-md-6 col-lg-5">
            <div class="dashboard-card">
                <div class="card-icon clock-in-icon">
                    <i class="bi bi-clock-fill"></i>
                </div>
                <h3 class="fw-bold mb-3">Clock In</h3>
                <p class="text-muted mb-4">Record your attendance for today's session</p>
                <a href="/Student/Student" class="btn btn-primary dashboard-btn">
                    <i class="bi bi-clock-history me-2"></i>Clock In Now
                </a>
            </div>
        </div>

        <!-- View Attendance History Card -->
        <div class="col-md-6 col-lg-5">
            <div class="dashboard-card">
                <div class="card-icon history-icon">
                    <i class="bi bi-calendar-check-fill"></i>
                </div>
                <h3 class="fw-bold mb-3">Attendance History</h3>
                <p class="text-muted mb-4">View your attendance records and statistics</p>
                <a href="/Student/AttendanceHistory" class="btn btn-outline-primary dashboard-btn">
                    <i class="bi bi-list-ul me-2"></i>View History
                </a>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12 text-center">
            <a href="/Auth/" class="btn btn-link text-white text-decoration-none">
                <i class="bi bi-box-arrow-right me-2"></i>Logout
            </a>
        </div>
    </div>
</div>

<script>
</script>

@section Styles {
    <style>
        body {
            background: linear-gradient(135deg, #4a90e2 0%, #2c5aa0 100%);
            min-height: 100vh;
        }

        .dashboard-card {
            background: white;
            border-radius: 20px;
            padding: 3rem 2rem;
            text-align: center;
            transition: all 0.3s ease;
            box-shadow: 0 10px 30px rgba(0,0,0,0.15);
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .dashboard-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.25);
        }

        .card-icon {
            font-size: 5rem;
            margin-bottom: 1.5rem;
        }

        .clock-in-icon {
            color: #4a90e2;
        }

        .history-icon {
            color: #5cb85c;
        }

        .dashboard-btn {
            padding: 0.75rem 2rem;
            font-size: 1.1rem;
            border-radius: 50px;
            transition: all 0.3s ease;
            border-width: 2px;
        }

        .dashboard-btn:hover {
            transform: scale(1.05);
        }

        .btn-outline-primary {
            color: #4a90e2;
            border-color: #4a90e2;
        }

        .btn-outline-primary:hover {
            background-color: #4a90e2;
            border-color: #4a90e2;
            color: white;
        }

        .btn-link:hover {
            opacity: 0.8;
        }
    </style>
}
