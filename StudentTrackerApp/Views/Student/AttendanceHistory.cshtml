@{
    ViewData["Title"] = "Attendance History";
    var studentId = ViewData["CurrentStudentId"];
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-5 text-white fw-bold mb-2">
                        <i class="bi bi-calendar-check me-2"></i>Attendance History
                    </h1>
                    <p class="text-white-50">View your complete attendance records</p>
                </div>
                <a href="/Student/Dashboard" class="btn btn-light">
                    <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="table-card">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col"><i class="bi bi-person-badge me-2"></i>Student ID</th>
                                <th scope="col"><i class="bi bi-calendar-event me-2"></i>Date</th>
                                <th scope="col"><i class="bi bi-geo-alt me-2"></i>Location</th>
                            </tr>
                        </thead>
                        <tbody id="attendanceTableBody">
                        <!--- JS will populate this element after the fetch request -->
                            <tr class="empty-row">
                                <td colspan="3" class="text-center text-muted py-5">
                                    <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                                    <p class="mb-0">Loading attendance records...</p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #4a90e2 0%, #2c5aa0 100%);
            min-height: 100vh;
        }

        .table-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            overflow: hidden;
        }

        .table {
            margin-bottom: 0;
        }

        thead {
            background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
            color: white;
        }

        thead th {
            border: none;
            padding: 1rem;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.875rem;
            letter-spacing: 0.5px;
        }

        tbody tr {
            transition: all 0.2s ease;
        }

        tbody tr:hover {
            background-color: #f8f9fa;
            transform: scale(1.01);
        }

        tbody td {
            padding: 1rem;
            vertical-align: middle;
            border-color: #e9ecef;
        }

        .empty-row:hover {
            background-color: white !important;
            transform: none !important;
        }

        .table-footer {
            padding: 1rem 1.5rem;
            background-color: #f8f9fa;
            border-top: 1px solid #dee2e6;
        }

        .btn-light {
            background-color: white;
            border: none;
            padding: 0.5rem 1.5rem;
            border-radius: 50px;
            transition: all 0.3s ease;
        }

        .btn-light:hover {
            background-color: #f8f9fa;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }
    </style>
}

@section Scripts {
    <script>
        /**
         * Fetches attendance records for the current student and populates the table.
         */
        async function getAttendance() {
            const studentId = '@studentId'; 
            
            const tableBody = document.getElementById('attendanceTableBody'); 

            if (!tableBody) {
                console.error("Critical Error: attendanceTableBody not found.");
                return; 
            }
            
            tableBody.innerHTML = `<tr><td colspan="4" class="text-center text-muted py-5">
                                        <i class="bi bi-hourglass-split fs-1 d-block mb-3"></i>
                                        <p class="mb-0">Loading attendance records...</p>
                                    </td></tr>`;

            if (!studentId || studentId === '0' || studentId === 'null') {
                 tableBody.innerHTML = `<tr><td colspan="3" class="text-center text-danger py-5">
                                            Error: Student ID not found or is invalid. Value received: <b>${studentId}</b>
                                        </td></tr>`;
                 console.error("Student ID is invalid or missing:", studentId);
                return;
            }

            const apiUrl = `http://localhost:5013/api/StudentAPI/one/${studentId}`;

            try {
                const response = await fetch(apiUrl);

                if (!response.ok) {
                    const errorText = await response.text();
                    console.error('API Error Response:', errorText);
                    throw new Error(`API Error! Status: ${response.status}`);
                }

                const data = await response.json();

                const records = data.attendanceRecords;
                
                tableBody.innerHTML = ''; 

                if (Array.isArray(records) && records.length > 0) {
                    records.forEach(record => {
                        
                        const dateOnly = record.date ? new Date(record.date).toLocaleDateString() : 'N/A';
                        
                        const row = `
                            <tr>
                                <td>${record.studentId || 'N/A'}</td>
                                <td>${dateOnly}</td>
                                <td>
                                    Lat: ${record.clockInLatitude ? record.clockInLatitude.toFixed(4) : 'N/A'} 
                                    / Long: ${record.clockInLongitude ? record.clockInLongitude.toFixed(4) : 'N/A'}
                                </td>
                            </tr>
                        `;
                        tableBody.innerHTML += row;
                    });
                } else {
                     tableBody.innerHTML = `<tr><td colspan="3" class="text-center text-muted py-5">
                                            <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                                            <p class="mb-0">No attendance records found for student ID: <b>${studentId}</b></p>
                                        </td></tr>`;
                }

            } catch (error) {
                console.error('Fetch Error:', error);
                 tableBody.innerHTML = `<tr><td colspan="3" class="text-center text-danger py-5">
                                            <i class="bi bi-exclamation-triangle fs-1 d-block mb-3"></i>
                                            <p class="mb-0">Failed to load records. Check console for error details (network or API response error).</p>
                                        </td></tr>`;
            }
        }

        document.addEventListener('DOMContentLoaded', getAttendance);
    </script>
}