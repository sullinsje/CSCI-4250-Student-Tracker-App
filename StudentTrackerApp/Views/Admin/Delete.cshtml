@using StudentTrackerApp.Models.Entities
@using StudentTrackerApp.Services

@model ApplicationUser
@{
    // The title is dynamically set using the user's name
    ViewData["Title"] = $"Confirm Deletion of {Model?.Name ?? "User"}";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <!-- Header and Back Button -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="display-5 fw-bold text-danger">
                    <i class="bi bi-trash-fill me-3"></i>
                    @ViewData["Title"]
                </h1>
                <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary" title="Back to User List">
                    <i class="bi bi-arrow-left me-2"></i>Back to User List
                </a>
            </div>

            <!-- Warning Card -->
            @if (Model != null)
            {
                <div class="card shadow-lg border-danger delete-card">
                    <div class="card-header bg-danger text-white p-4 rounded-top-2">
                        <h4 class="mb-0 fw-semibold"><i class="bi bi-exclamation-triangle-fill me-2"></i>Irreversible Action Warning</h4>
                    </div>
                    
                    <div class="card-body p-4 p-md-5">
                        
                        <p class="lead text-dark mb-4">
                            You are about to permanently **delete** the following user account. This action **cannot be undone**.
                            Please verify the details before proceeding.
                        </p>
                        
                        <!-- User Details for Confirmation -->
                        <dl class="row detail-list border p-3 rounded-3 bg-light mb-5">
                            <dt class="col-sm-4 text-danger fw-bold">User Name:</dt>
                            <dd class="col-sm-8 fw-bold text-dark">@Model.Name</dd>

                            <dt class="col-sm-4 text-danger fw-bold">Email:</dt>
                            <dd class="col-sm-8 text-dark">@Model.Email</dd>

                            <dt class="col-sm-4 text-danger fw-bold">User ID:</dt>
                            <dd class="col-sm-8 text-monospace text-muted">@Model.Id</dd>
                        </dl>
                        
                        <!-- Confirmation Form -->
                        <form asp-controller="Admin" asp-action="Delete" asp-route-id="@Model.Id" method="post">
                            @Html.AntiForgeryToken()
                            
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary btn-lg action-btn">
                                    <i class="bi bi-x-circle me-2"></i>
                                    Cancel & Keep User
                                </a>
                                <button type="submit" class="btn btn-danger btn-lg action-btn delete-btn">
                                    <i class="bi bi-person-x-fill me-2"></i>
                                    Confirm & Delete User
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <!-- Error Message if Model is null (shouldn't happen if controller is correct) -->
                <div class="alert alert-danger text-center py-5 shadow-lg">
                    <h3 class="fw-bold mb-3"><i class="bi bi-question-octagon-fill me-2"></i>Error: User Data Missing</h3>
                    <p class="lead">Could not load user details for deletion confirmation.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        .container {
            max-width: 960px;
        }

        .delete-card {
            border-radius: 1rem;
            border-width: 3px;
        }

        .card-header {
            /* Deeper red for strong warning */
            background-color: #c9302c !important; 
            border-bottom: none;
        }
        
        .detail-list {
            background-color: #fffafa !important; /* Very light red background */
        }
        
        .action-btn {
            border-radius: 50px;
            padding: 0.75rem 1.5rem;
        }
        
        .delete-btn {
            transition: all 0.2s ease;
        }
        
        .delete-btn:hover {
            transform: scale(1.03);
            box-shadow: 0 4px 10px rgba(220, 53, 69, 0.5);
        }

        .text-monospace {
            font-family: 'Consolas', 'Courier New', monospace;
            font-size: 0.9em;
            word-break: break-all;
        }
    </style>
}