@using StudentTrackerApp.Controllers 
@model UserCreationDto
@{
    ViewData["Title"] = "Create New User";
    // NEW: Get the list of all available roles for the dropdown
    var allRoles = ViewData["AllRoles"] as ICollection<string> ?? new List<string>();
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="display-4 fw-bold text-primary-emphasis">
                    <i class="bi bi-person-plus-fill me-3"></i>
                    @ViewData["Title"]
                </h1>
                <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary" title="Back to List">
                    <i class="bi bi-arrow-left me-2"></i>Back to User List
                </a>
            </div>

            <!-- Form Card -->
            <div class="card shadow-lg border-0">
                <div class="card-body p-4 p-md-5">

                    <form asp-controller="Admin" asp-action="Create" method="post" novalidate>
                        
                        <!-- 
                            Validation Summary:
                            This will display errors from IdentityResult (e.g., "Password not strong enough")
                            that you added to ModelState in the controller.
                        -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Name Field -->
                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control" placeholder="Full Name" />
                            <label asp-for="Name" class="form-label">Full Name</label>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <!-- Email Field -->
                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" placeholder="Email Address" />
                            <label asp-for="Email" class="form-label">Email Address</label>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        
                        <!-- NEW ROLE FIELD (Dropdown List) -->
                        <div class="form-floating mb-3">
                            <select asp-for="RoleName" class="form-select">
                                <option value="" disabled selected>-- Select a Role --</option>
                                @foreach (var role in allRoles.OrderBy(r => r))
                                {
                                    // Set the selected attribute if Model.RoleName matches the role
                                    <option value="@role" selected="@(Model.RoleName == role)">@role</option>
                                }
                            </select>
                            <label asp-for="RoleName" class="form-label">User Role</label>
                            <span asp-validation-for="RoleName" class="text-danger small"></span>
                        </div>

                        <!-- Password Field -->
                        <div class="form-floating mb-4">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                            <label asp-for="Password" class="form-label">Password</label>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                        
                        <!-- Action Buttons -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-x-circle me-2"></i>
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle-fill me-2"></i>
                                Create User
                            </button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        // This partial view enables client-side validation
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        .container {
            max-width: 960px;
        }

        .card.shadow-lg {
            border-radius: 1rem;
        }

        .btn-lg {
            padding: 0.75rem 1.5rem;
            border-radius: 50px;
        }

        .btn-outline-secondary {
            border-radius: 50px;
        }

        .form-floating > .form-control:not(:placeholder-shown) ~ label,
        .form-floating > .form-select:not(.text-muted) ~ label {
            opacity: .65;
            transform: scale(.85) translateY(-.5rem) translateX(.15rem);
        }
    </style>
}