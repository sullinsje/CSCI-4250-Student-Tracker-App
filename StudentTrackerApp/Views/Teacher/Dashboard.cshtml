@{
    ViewData["Title"] = "Teacher Dashboard";
}

<div class="container py-5">
    <div class="row">
        <div class="col-12 text-center mb-5">
            <h1 class="display-4 text-white fw-bold mb-2">
                <i class="bi bi-person-badge-circle me-3"></i>Teacher Dashboard
            </h1>
            <p class="lead text-white">Welcome back! Manage your classroom</p>
        </div>
    </div>

    <div class="row g-4 justify-content-center">
        <!-- View Student List Card -->
        <div class="col-md-6 col-lg-5">
            <div class="dashboard-card">
                <div class="card-icon student-list-icon">
                    <i class="bi bi-people-fill"></i>
                </div>
                <h3 class="fw-bold mb-3">Student List</h3>
                <p class="text-muted mb-4">View and manage your students</p>
                <a href="/Teacher/StudentList" class="btn btn-danger dashboard-btn">
                    <i class="bi bi-list-ul me-2"></i>View Student List
                </a>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12 text-center">
            <a href="/Auth/" class="btn btn-link text-white text-decoration-none">
                <i class="bi bi-box-arrow-right me-2"></i>Logout
            </a>
        </div>
    </div>
</div>

@section Styles {
    <style>
        body {
            background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
            min-height: 100vh;
        }

        .dashboard-card {
            background: white;
            border-radius: 20px;
            padding: 3rem 2rem;
            text-align: center;
            transition: all 0.3s ease;
            box-shadow: 0 10px 30px rgba(0,0,0,0.15);
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .dashboard-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.25);
        }

        .card-icon {
            font-size: 5rem;
            margin-bottom: 1.5rem;
        }

        .student-list-icon {
            color: #e74c3c;
        }

        .dashboard-btn {
            padding: 0.75rem 2rem;
            font-size: 1.1rem;
            border-radius: 50px;
            transition: all 0.3s ease;
            border: none;
        }

        .dashboard-btn:hover {
            transform: scale(1.05);
            background-color: #c0392b;
        }

        .btn-link:hover {
            opacity: 0.8;
        }
    </style>
}
